.home
	padding 5px 0 30px
	.js-home-slider
		max-width 835px
		width 100%
		overflow hidden

		.slick-dots
			display flex
			justify-content center
			align-items center
			margin-top 20px

			li
				margin-right 10px

				&.slick-active
					.home-slider__dot
						background-color mandarinYellowLight

				&:last-child
					margin-right 0

	&-slider
		position relative
		display flex
		justify-content center
		margin 0 auto
		margin-bottom 20px

		&__item
			outline none

		&__prev
			position absolute
			top 50%
			left 0
			transform translateY(-50%)
			width 15px
			height 25px
			background url('../img/general/arrow-left-icon.png') center no-repeat
			background-size contain
			transition all linear .5s
			cursor pointer
			z-index 20

		&__next
			position absolute
			top 50%
			right 0
			transform translateY(-50%)
			width 15px
			height 25px
			background url('../img/general/arrow-right-icon.png') center no-repeat
			background-size contain
			transition all linear .5s
			cursor pointer
			z-index 20

		&__dot
			width 12px
			height 12px
			display block
			border 1px solid mandarinYellowLight
			border-radius 50%
			background-color transparent
			transition all linear .5s
			cursor pointer

			&:hover
				background-color mandarinYellowLight

	.js-home-product-slider
		width 100%


	&-product-slider
		position relative
		display flex
		flex-direction column
		justify-content flex-start
		align-items center
		margin-bottom 40px
		// overflow hidden
		&__title
			color mandarinBlack
			font-family mainFont
			font-size 16px
			margin-bottom 20px

		&__prev
			position absolute
			top 50%
			left 0
			transform translateY(-50%)
			display block
			width 72px
			height 100%
			background-image linear-gradient(to left, rgba(255, 255, 255, 0) 0%, #ffffff 77%, #ffffff 100%)
			z-index 5

			&-arrow
				position absolute
				top 50%
				left 0
				transform translateY(-50%)
				width 15px
				height 25px
				background url('../img/general/arrow-left-icon.png') center no-repeat
				background-size contain
				transition all linear .5s
				cursor pointer
				z-index 20


			&.slick-disabled
				display none !important

		&__next
			position absolute
			top 50%
			right 0
			transform translateY(-50%)
			display block
			width 72px
			height 100%
			background-image linear-gradient(to right, rgba(255, 255, 255, 0) 0%, #ffffff 77%, #ffffff 100%)
			z-index 5
			

			&-arrow
				position absolute
				top 50%
				right 0
				transform translateY(-50%)
				width 15px
				height 25px
				background url('../img/general/arrow-right-icon.png') center no-repeat
				background-size contain
				transition all linear .5s
				cursor pointer
				z-index 20

			// &:after
			// 	content ''
			// 	position absolute
			// 	display block
			// 	top -50%
			// 	right 0
			// 	width 72px
			// 	height 380px
			// 	background-image linear-gradient(to right, rgba(255, 255, 255, 0) 0%, #ffffff 77%, #ffffff 100%)
			// 	z-index -1

			&.slick-disabled
				display none !important

		&__item
			position relative
			width 210px
			height 375px
			box-shadow 0 0 4px 1px rgba(0, 0, 0, 0.18)
			border-radius 5px
			margin 5px 15px
			display flex
			flex-direction column
			justify-content space-between
			align-items center
			outline none

		&__img
			width 140px
			height 140px
			display block
			object-fit contain
			margin 30px auto
			margin-bottom 75px

		&__info
			position relative
			z-index 10
			background-color white

			&:after
				content ''
				position absolute
				top -20px
				display block
				width 100%
				height 40px
				background-color white
				box-shadow 0 -1px 2px 0px rgba(0, 0, 0, 0.18)
				transform skewY(10deg)
				z-index -1


		&__label
			padding-top 15px
			position absolute
			top 60%
			right 6px
			transform translateY(-50%)
			width 75px
			height 68px
			border-radius 10px
			color white
			font-family blackFont
			font-size 18px
			text-transform uppercase
			text-align center
			z-index 1

			&--top
				background-color #519205
			&--new
				background-color #2705f5
			&--sale
				background-color #f50549

		&__name
			padding-left 20px
			color black
			font-family boldFont
			font-size 12px
			text-transform uppercase
			margin-bottom 2px

		&__leavel
			padding-left 20px
			color black
			font-family lightFont
			font-size 12px
			margin-bottom 2px

		&__model
			padding-left 20px
			color black
			font-family lightFont
			font-size 12px
			margin-bottom 2px

		&__price
			padding-left 20px
			color black
			font-family lightFont
			font-size 12px
			margin-bottom 15px

		&--bold
			font-family boldFont

		&--red
			font-family boldFont
			color mandarinRed

		&__btn
			padding 0 15px
			max-width 175px
			width 100%
			height 40px
			display block
			border none
			border-radius 20px
			background-color mandarinYellowLight
			color white
			font-family boldFont
			font-size 14px
			transition all linear .5s
			cursor pointer
			margin 0 auto

			&:hover
				box-shadow 0 0 5px 1px rgba(0, 0, 0, 0.21)

	&-text
		color mandarinBlack
		font-family lightFont
		font-size 14px



