// @media screen and (max-width: 1919px)


@media screen and (max-width: 1365px)
	.container
		max-width 780px
		padding 0 10px

	.nav__link
		padding 6px 5px 10px
		max-width 90px

	.nav-log
		max-width 150px
		justify-content center

	.nav-log__link
		padding 6px 5px 10px
		max-width none
		width auto

	.nav-language
		margin-right 15px

	.header
		height 100px

	.header-logo__img
		max-width 215px
		height 60px

	.header-phone
		margin-top 8px
		padding-left 25px
	
	.header__link
		font-size 12px

	.header-phone:after
		width 16px
		height 16px

	.header-locations
		margin-top 8px
		padding-left 14px

	.header-locations:after
		width 12px

	.header-brands
		margin-top 8px
		padding-left 20px

	.header-brands:after
		width 18px
		height 18px

	.header-actions
		margin 0
		padding-left 16px
		position absolute
		bottom 6px
		left 62%
		transform translateX(-50%)

	.header-actions:after
		width 14px
		height 14px

	.header-info
		font-size 12px

	.menu__link
		padding 0
		font-size 12px
		min-width 70px

	.menu-category
		max-width 748px
		padding 40px 70px 20px
		left 10px

	.menu-category__right
		display none

	.home .js-home-slider
		max-width 700px

	.home-product-slider__item
		width 200px

	.footer
		padding 20px 0
		height 110px
    

@media screen and (max-width: 767px)
	.nav__list
		display none
	.nav-log
		display none

	.nav-language
		display none

	.nav-phone-mobile
		display block

	.nav__sandwich
		display block

	.nav-search
		max-width 155px

	.header
		height 80px
		margin-bottom 2px

	.header-logo__img
		max-width 120px
		height 30px
	.header-phone
		display none

	.header-locations
		display none
	.header-brands
		display none
	.header-actions
		display none
	.header-info:nth-child(2)
		position absolute
		top 15px
		right 10px
		display flex
		flex-direction column
		align-items flex-end

	.menu__list
		display none

	.menu-mobile
		display block

	.home-slider__prev
		display none

	.home-slider__next
		display none

	.home .js-home-slider .slick-dots
		margin-top 10px

	.home-slider__img
		width 100%
		height 140px
		object-fit contain
	.footer
		height 170px

	.footer .container
		flex-wrap wrap

	.footer-feedback
		order 2

	.footer__title
		font-size 12px

	.footer-contacts
		align-items flex-start

	.footer-contacts__link
		font-size 12px

	.footer-feedback__input
		width 180px

	.footer-feedback__btn
		font-size 12px
    