.menu
	padding 0
	margin 0
	height 48px

	.container
		height 100%
		display flex
		align-items center

	&__list
		width 100%
		height 100%
		display flex
		justify-content space-between
		align-items center

	&__item
		// position relative
		height 100%

	&__link
		padding 0 10px
		min-width 90px
		width 100%
		height 100%
		color black
		font-family lightFont
		font-size 14px
		display flex
		align-items center
		justify-content center
		text-align center
		transition all linear .5s
		cursor pointer

		&:hover
			background-color mandarinYellowLight
			box-shadow 0 0 4px 1px rgba(0, 0, 0, 0.18)

	&-category
		padding 25px 100px 25px 90px
		position absolute
		top 100%
		left paddingLeftRight
		max-width 1050px
		width 100%
		height 410px
		background-color white
		box-shadow 0 0 4px 1px rgba(0, 0, 0, 0.18)
		display none
		justify-content space-between
		align-items flex-start
		z-index 30

		&.active
			display flex

		&__left
			max-width 580px
			width 100%
			height 320px
			display flex
			flex-direction column
			justify-content space-between
			align-items flex-start
			align-content space-between
			flex-wrap wrap

		&__title
			color mandarinBlack
			font-family mediumFont
			font-size 16px
			margin-bottom 10px

		&__list
			padding-left 10px

		&__item
			margin-bottom 6px

			&:last-child
				margin-bottom 0
		
		&__link 
			color black
			border-bottom 1px solid white
			font-family lightFont
			font-size 14px
			transition all linear .5s
			cursor pointer

			&:hover
				color mandarinYellowLight
				border-color mandarinYellowLight


	&-mobile
		position relative
		width 100%
		display none

		&__header
			position relative
			width 100%
			height 44px
			box-shadow 0 0 8px 1px rgba(0, 0, 0, 0.17)
			border-radius 0 0 30px 30px
			background-color mandarinYellowDark
			display flex
			justify-content center
			align-items center
			transition all linear .5s

			&.active
				border-radius 30px 30px 0 0

		&__title
			color white
			font-family mediumFont
			font-size 14px
			text-transform uppercase

		&__btn
			position absolute
			top 50%
			right 10px
			transform translateY(-50%)
			width 30px
			height 30px
			box-shadow 0 0 5px 1px rgba(0, 0, 0, 0.21)
			border-radius 50%
			background-color white
			transition all linear .5s
			cursor pointer

			&.active

				.menu-mobile__btn-line
					top 45%

				.menu-mobile__btn-line--1
					left 8px
					transform rotate(45deg)

				.menu-mobile__btn-line--2
					right 8px
					transform rotate(-45deg)


			&-line
				position absolute
				top 50%
				display block
				width 14px
				height 4px
				background-color mandarinYellowDark
				border-radius 2px
				transition all linear .5s

				&--1
					left 4px
					transform rotate(45deg)

				&--2
					right 4px
					transform rotate(-45deg)
		&__category
			padding 5px 0 0
			position absolute
			top 40px
			width 100%
			display none
			flex-direction column
			justify-content flex-start
			align-items center
			background-color white
			box-shadow 0 0 8px 1px rgba(0, 0, 0, 0.17)
			border-radius 0 0 30px 30px
			z-index 30

			&.active
				display flex

		&__item
			width 100%

			&:last-child
				width 100%
				height 44px
				box-shadow 0 0 8px 1px rgba(0, 0, 0, 0.17)
				border-radius 0 0 30px 30px
				background-color mandarinYellowDark

		&__name
			padding 10px
			height 40px
			color black
			font-family mediumFont
			font-size 12px
			text-transform uppercase
			display flex
			justify-content space-between
			align-items center
			transition .5s
			cursor pointer

			&.active
				.menu-mobile__name-plus-line--2
					opacity 0

			&-plus
				&-line
					display block
					width 20px
					height 4px
					background-color mandarinYellowDark
					border-radius 2px
					transition all linear .5s

					&--2
						position relative
						top -3px
						transform rotate(90deg)
						transition all linear .5s

		&-panel
			max-height 0
			overflow hidden
			transition max-height 0.2s ease-out

			&.active
				overflow auto

			&__name
				padding 10px 25px
				height 40px
				color black
				font-family mediumFont
				font-size 12px
				display flex
				justify-content space-between
				align-items center
				transition .5s
				cursor pointer

				&.active
					.menu-mobile__name-plus-line--2
						opacity 0

			&__list
				padding-left 50px
				max-height 0
				overflow hidden
				transition max-height 0.2s ease-out

			&-list__item
				margin-bottom 20px

			&__link
				height 40px
				color black
				font-family lightFont
				font-size 12px
				border 1px solid white
				transition all linear .5s
				cursor pointer

				&:hover
					color mandarinYellowDark
					border-color mandarinYellowDark	
