.menu
	padding 0
	margin 0
	height 48px

	.container
		height 100%
		display flex
		align-items center

	&__list
		width 100%
		height 100%
		display flex
		justify-content space-between
		align-items center

	&__item
		height 100%

	&__link
		padding 0 10px
		min-width 105px
		width 100%
		height 100%
		color black
		font-family lightFont
		font-size 14px
		display flex
		align-items center
		justify-content center
		text-align center
		transition all linear .5s
		cursor pointer

		&:hover
			background-color mandarinYellowLight
			box-shadow 0 0 4px 1px rgba(0, 0, 0, 0.18)