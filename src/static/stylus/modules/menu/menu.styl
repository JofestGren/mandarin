.menu
	padding 0
	margin 0
	height 48px

	.container
		height 100%
		display flex
		align-items center

	&__list
		width 100%
		height 100%
		display flex
		justify-content space-between
		align-items center

	&__item
		// position relative
		height 100%

	&__link
		padding 0 10px
		min-width 90px
		width 100%
		height 100%
		color black
		font-family lightFont
		font-size 14px
		display flex
		align-items center
		justify-content center
		text-align center
		transition all linear .5s
		cursor pointer

		&:hover
			background-color mandarinYellowLight
			box-shadow 0 0 4px 1px rgba(0, 0, 0, 0.18)

	&-category
		padding 25px 100px 25px 90px
		position absolute
		top 100%
		left paddingLeftRight
		max-width 1050px
		width 100%
		height 410px
		background-color white
		box-shadow 0 0 4px 1px rgba(0, 0, 0, 0.18)
		display none
		justify-content space-between
		align-items flex-start
		z-index 30

		&.active
			display flex

		&__left
			max-width 580px
			width 100%
			height 320px
			display flex
			flex-direction column
			justify-content space-between
			align-items flex-start
			align-content space-between
			flex-wrap wrap

		&__title
			color mandarinBlack
			font-family mediumFont
			font-size 16px
			margin-bottom 10px

		&__list
			padding-left 10px

		&__item
			margin-bottom 6px

			&:last-child
				margin-bottom 0
		
		&__link 
			color black
			border-bottom 1px solid white
			font-family lightFont
			font-size 14px
			transition all linear .5s
			cursor pointer

			&:hover
				color mandarinYellowLight
				border-color mandarinYellowLight
			
