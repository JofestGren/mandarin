.nav
	height 50px

	.container
		height 100%
		display flex
		justify-content space-between
		align-items center

	&__list
		height 100%
		display flex
		justify-content space-between
		align-items center

	&__item
		height 100%
		display flex
		align-items flex-end

	&__link
		padding 6px 20px 10px
		max-width 105px
		width 100%
		height 46px
		color black
		border-radius 22px 22px 0 0
		display flex
		align-items center
		font-family lightFont
		font-size 14px
		transition all linear .5s
		cursor pointer

		&:hover
			background-color mandarinYellowLight

	&-search
		max-width 195px
		width 100%
		border-radius 18px
		display flex
		justify-content flex-start
		align-items center

		&.active
			box-shadow 0 0 5px 1px rgba(0, 0, 0, 0.21)
			.nav-search__input
				display block
		&__input
			display none
			width 100%
			height 36px
			border none
			background-color transparent

		&__btn
			padding 0
			position relative
			width 36px
			height 36px
			box-shadow 0 0 5px 1px rgba(0, 0, 0, 0.21)
			background-color transparent
			border none
			border-radius 18px
			transition all linear .5s
			cursor pointer

			&:after
				content ''
				position absolute
				top 50%
				left 50%
				transform translate(-50%, -50%)
				width 16px
				height 16px
				background url('../img/general/magnifier-icon--black.png') center no-repeat
				background-size contain

			&:hover
				background-color mandarinYellowDark
				&:after
					background url('../img/general/magnifier-icon--white.png') center no-repeat
					background-size contain

	&-log
		padding-top 4px
		max-width 210px
		width 100%
		height 100%
		display flex
		justify-content space-between
		align-items center


		&__link
			padding 6px 20px 10px
			max-width 105px
			width 100%
			height 46px
			color black
			border-radius 22px 22px 0 0
			display flex
			justify-content center
			align-items center
			font-family lightFont
			font-size 14px
			transition all linear .5s
			cursor pointer

			&:hover
				background-color mandarinYellowLight

	&-language
		padding 0 8px
		width 68px
		height 38px
		box-shadow 0 0 5px 1px rgba(0, 0, 0, 0.21)
		border-radius 18px
		background-color white
		display flex
		justify-content space-between
		align-items center

		&__link
			opacity .2
			color black
			font-family mediumFont
			font-size 10px

	&-basket
		display flex
		align-items center
		&__btn
			padding 0
			position relative
			width 36px
			height 36px
			box-shadow 0 0 5px 1px rgba(0, 0, 0, 0.21)
			border none
			border-radius 18px
			background-color transparent
			transition all linear .5s
			cursor pointer

			&:after
				content ''
				position absolute
				top 50%
				left 50%
				transform translate(-50%, -50%)
				width 16px
				height 16px
				background url('../img/general/basket-icon--black.png') center no-repeat
				background-size contain
