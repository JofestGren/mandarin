.footer
    padding 35px 0 40px
    background-color cheryBlue
    background-size cover

    .container
        display flex
        justify-content space-between
        align-items flex-start

    &-logo
        img
            max-width 170px
            width 100%
            height 62px

    &__list
        display flex
        flex-direction column
        justify-content flex-start
        align-items flex-start

    &__link
        color white
        font-family thinFont
        font-size 18px
        text-transform uppercase
        transition all linear .5s
        cursor pointer

        &:hover
            border-bottom 1px solid white

    &-social
        display flex
        flex-direction column
        justify-content flex-start
        align-items flex-start

        &__title
            color white
            font-family mediumFont
            font-size 18px

        &__link
            color white
            font-family thinFont
            font-size 18px
            margin-bottom 5px
            transition all linear .5s
            cursor pointer

            &:last-child
                margin 0

            &:hover
                border-bottom 1px solid white

    &-phone
        display flex
        flex-direction column
        justify-content flex-start
        align-items flex-start

        &__title
            color white
            font-family mediumFont
            font-size 18px

        &__link
            color white
            font-family thinFont
            font-size 18px
            margin-bottom 5px
            transition all linear .5s
            cursor pointer

            &:last-child
                margin 0

            &:hover
                border-bottom 1px solid white